<%layout('../layout')%>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Dashboard</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <!-- /.row -->
    <div class="video">
        <video id="theirs" autoplay></video>
    </div>

    <div class="form-group">
        <label>Active Monitors</label>
        <select class="form-control" id="dashboard-users">
        </select>
    </div>

    <div class="form">
        <button id="call" type="button" class="btn btn-success">View Monitor</button>
        <button id="hang" type="button" class="btn btn-danger">Hang Up</button>
        <br>
        <br>

        <form role="form">
            <div class="form-group">
                <label>Rename Monitor</label>
                <div id="taken_id_error" class="alert alert-danger alert-dismissable" style="display: none;">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    This ID is already taken, please try again.
                </div>
                <div id="rename_successful" class="alert alert-success alert-dismissable" style="display: none;">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    Monitor renamed successfully
                </div>
                <input id="new-name" class="form-control">
                <p class="help-block">Rename currently selected monitor. Must not be active</p>
            </div>
        </form>
        <button id="rename" class="btn btn-default">Submit</button>
    </div>

    <br />

    <div class="form">
        <label>Play Lullaby</label>
        <input class="btn btn-outline btn-info" type="file" id="files" name="file">
        <br />
        <button id="send_file" type="button" class="btn btn-success">Play</button>
        <p class="help-block">Lullaby will play at the monitor as soon as the upload is finished</p>
        Upload Progress:
        <progress style="width:25%" id="download-progress" value="0" max="100"></progress>
    </div>

    <script src="/js/dashboard_main.js"></script>